<div class="col-lg-12">
  <div class="panel panel-info">
    <div class="panel-heading">
      Find a doctor:
    </div>
    <div class="panel-body">
      <%= form_tag search_doctors_sites_path, :remote => true do %>
        <%= text_field_tag :name, nil, :placeholder => " Name" %>&nbsp;
        <%#= select_tag "client"
        , options_from_collection_for_select(@client, "id", "name"), prompt: "Select client" %>&nbsp;&nbsp;&nbsp;&nbsp;
        <%= text_field_tag :email, nil, :placeholder => " Email" %>&nbsp;
        <%= text_field_tag :contact_no, nil, :placeholder => " Contact no" %>&nbsp;
        <%= text_field_tag :department, nil, :placeholder => " Department" %>&nbsp;
        <%= submit_tag "Submit",:class => "btn btn-info", :role =>"button", :style => "margin-right:10px;"%>
      <% end %>
    </div>
  </div>
  <div id="contacts_table">
  </div>
</div>