<h1>Listing slots</h1>

<table>
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Hospital</th>
      <th>Slot duration</th>
      <th>Slot shift</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slots.each do |slot| %>
      <tr>
        <td><%= slot.doctor_id %></td>
        <td><%= slot.hospital_id %></td>
        <td><%= slot.slot_duration %></td>
        <td><%= slot.slot_shift %></td>
        <td><%= link_to 'Show', slot %></td>
        <td><%= link_to 'Edit', edit_slot_path(slot) %></td>
        <td><%= link_to 'Destroy', slot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slot', new_slot_path %>
